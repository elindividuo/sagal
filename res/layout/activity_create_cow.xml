<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableCreateCow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/tvCreateCowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:text="Registrar Ejemplar"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <TableRow android:id="@+id/TableRow01" >

            <TextView
                android:id="@+id/tvCowId_CreateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro: "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/etCowId"
                android:hint="Registro"
                android:inputType="number"
                android:width="220dp" />

            <requestFocus />
        </TableRow>

        <TableRow android:id="@+id/TableRow02" >

            <TextView
                android:id="@+id/tvCowName_CreateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/etCowName"
                android:capitalize="words"
                android:hint="@string/etCowName"
                android:width="220dp" />
        </TableRow>

        <TableRow android:id="@+id/TableRow03" >

            <TextView
                android:id="@+id/tvCowBreed_CreateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza: "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/etCowBreed"
                android:capitalize="words"
                android:hint="@string/etCowBreed"
                android:width="220dp" />
        </TableRow>

        <TableRow android:id="@+id/TableRow04" >

            <TextView
                android:id="@+id/tvCowTattooCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tatuaje: "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/etCowTattoo"
                android:capitalize="words"
                android:hint="Tatuaje"
                android:width="220dp" />
        </TableRow>

       
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100" >
            
            
            <TextView
                android:id="@+id/tvCowBirthday_CreateView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:text="@string/fecha_de_nacimiento"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvCowDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_weight="25"
                android:text="dd/mm/aaaa"
                android:width="100dp" />
            
            <ImageButton
                android:id="@+id/ibChangeDateCreateCow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="42"
                android:src="@drawable/calendar" />
	</LinearLayout>


        <TableRow>

            <TextView
                android:id="@+id/tvCowProblemsCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Problemas: "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/etCowProblems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:capitalize="words"
                android:ems="10"
                android:hint="Problemas" >
            </EditText>
        </TableRow>
        
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bOkCreateCow"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Aceptar" />

            <Button
                android:id="@+id/bCancelCreatecow"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/bCancel" />
        </LinearLayout>
    </TableLayout>

</ScrollView>