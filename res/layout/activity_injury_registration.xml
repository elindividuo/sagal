<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
 	<RelativeLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="vertical" >
	
		<TextView
		    android:id="@+id/tvActivityInjuryTitle"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:padding="5dp"
		    android:text="@string/tvActivityInjuryTitle"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textStyle="bold" />
	
	 		<ImageButton
		    android:id="@+id/ibHoofSections"
		    android:layout_below="@+id/tvActivityInjuryTitle"
		    android:layout_centerHorizontal="true"
		    android:layout_width="400px"
	        android:layout_height="361px"
	        android:background="@drawable/cross" />
	
	
		<TextView
		    android:id="@+id/tvHoof"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="5dp"
		    android:textStyle="bold"
		    android:gravity="center"
		    android:text="PezuÃ±a posterior izquierda"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:layout_below="@+id/ibHoofSections"/>
				

		<Button
		    android:id="@+id/bSelectInjuries"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/bSelectInjuries"
		    android:padding="5dp"
		    android:layout_toRightOf="@+id/bSectionNumber"
		    android:layout_below="@+id/tvHoof" />
		
		<Button 
		    android:id="@+id/bAddNotes"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/bAddNotes"
		    android:padding="5dp"
		    android:layout_below="@+id/bSelectInjuries"
		    android:gravity="center"
		    android:onClick="addNotes" />
		
		<Button 
		    android:id="@+id/bOkInjuryRegistration"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/bOK"
		    android:padding="5dp"
		    android:layout_below="@+id/bAddNotes"
		    android:gravity="center"
		    android:onClick="ok"/>
		
		<Button
		    android:id="@+id/bSectionNumber"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Button"
		    android:layout_below="@+id/tvHoof" />

			    
	</RelativeLayout>
	
</ScrollView>