<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableEditCow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/tvFarmEditTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="top|center"
            android:text="Editar Ejemplar"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvCowId_EditView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro: "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/etCowNumber_EditView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Registro"
                android:inputType="number" />

            <requestFocus />
        </TableRow>

        <TableRow android:id="@+id/TableRow02" >

            <TextView
                android:id="@+id/tvCowName_EditView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/etCowName_EditView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:capitalize="words"
                android:hint="@string/etCowName" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvCowBreed_CreateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza: "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/etCowBreed_EditView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:capitalize="words"
                android:hint="@string/etCowBreed" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvCowTattooEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tatuaje: "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/etCowTattooEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:capitalize="words"
                android:hint="Tatuaje" />
        </TableRow>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100" >

            <TextView
                android:id="@+id/tvCowBirthday_EditView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:text="@string/fecha_de_nacimiento"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvCowDateEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_weight="25"
                android:text="dd/mm/aaaa"
                android:width="100dp" />

            <ImageButton
                android:id="@+id/ibChangeDateEditCow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="42"
                android:src="@drawable/calendar" />
        </LinearLayout>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvCowProblemsEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Problemas: "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/etCowProblemsEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:capitalize="words"
                android:ems="10"
                android:hint="Problemas" >
            </EditText>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/tvCowFinalDestEdit"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/destino_final"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/etCowFinalDestEdit"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:capitalize="words"
                android:ems="10"
                android:hint="Destino Final" >
            </EditText>
        </TableRow>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100" >

            <TextView
                android:id="@+id/tvCowFather_EditView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="33"
                android:text="Padre:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvCowFatherEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_weight="25"
                android:text="Father"
                android:width="100dp" />

            <ImageButton
                android:id="@+id/ibChangeFatherEditCow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="42"
                android:src="@drawable/cow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100" >

            <TextView
                android:id="@+id/tvCowMother_EditView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="33"
                android:text="Madre:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvCowMotherEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_weight="25"
                android:text="Mother"
                android:width="100dp" />

            <ImageButton
                android:id="@+id/ibChangeMotherEditCow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="42"
                android:src="@drawable/cow" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bOkEditCow"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Aceptar" />

            <Button
                android:id="@+id/bCancelEditCow"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/bCancel" />
        </LinearLayout>
    </TableLayout>

</ScrollView>